{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper">
        <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <main class="single__content">
                {% include "molecules/breadcrumbs/breadcrumbs.twig" %}
                <h1 class="article-h1">{{ post.title }}</h1>
                {{post.content}}
            </main>

            {% if related_posts %}
                <hr class="my-huge">
                <h2 class="title--h1 mt-huge mb-small">Related Posts</h2>
                <section class="archive archive--posts">
                    {% for post in related_posts %}
                        {% include "molecules/tease/tease.twig" with {
                            post : post
                        } %}
                    {% endfor %}
                </section>
            {% endif %}

        </article>
    </div>
{% endblock %}